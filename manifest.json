{
  "manifest_version": 2,
  "name": "Planespotters Fleet Copy",
  "version": "1.0",

  "description": "Copies fleet tables from planespotters.net",

  "browser_specific_settings": {
    "gecko": {
      "id": "webextensions@likhatchev.ru",
	  "update_url" : "https://github.com/PaulLik/Planespotters/blob/master/Planespotters%20Fleet%20Copy.xpi"
    }
  },
  
  "permissions": ["activeTab", "contextMenus"],

  "icons": {
    "32": "icons/icon32.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.planespotters.net/airline/*"],
      "js": []
    }
  ],
  
  "background": {
	"scripts": ["background.js"]}
}
